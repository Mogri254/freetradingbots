<TradingBot>
    <Strategy>
        <Name>Trend Following and Mean Reversion Bot</Name>
        <Conditions>
            <TrendFollowing>
                <Timeframe>Daily</Timeframe>
                <MA_Period>50</MA_Period>
            </TrendFollowing>
            <MeanReversion>
                <LookbackPeriod>20</LookbackPeriod>
                <BuyThreshold>-1.5</BuyThreshold>
                <SellThreshold>1.5</SellThreshold>
            </MeanReversion>
        </Conditions>
        <RiskManagement>
            <StopLoss>0.1</StopLoss>
            <TakeProfit>0.5</TakeProfit>
        </RiskManagement>
    </Strategy>
    <TradingRules>
        <Entry>
            <!-- Trend Following Entry Condition -->
            <Condition>CurrentPrice > MA(50)</Condition>
            <!-- Mean Reversion Entry Condition -->
            <Condition>(CurrentPrice - Mean(20)) < BuyThreshold or (CurrentPrice - Mean(20)) > SellThreshold</Condition>
        </Entry>
        <Exit>
            <Condition>ProfitTarget or StopLossTriggered</Condition>
        </Exit>
    </TradingRules>
    <Format>
        <Type>XML</Type>
        <Accuracy>High</Accuracy>
    </Format>
</TradingBot>
